<div class="flex-container">
  <div class="imageDiv flex-item">
      <img src="http://i.imgur.com/U8lHWST.png" class="img-responsive" alt="Responsive image">
  </div>

  <div class="contentDiv flex-item">
    <h1>{{title}}</h1>
    <p>This page has been viewed <b id="count">{{count}}</b> times by his friends, and Mark still doesn't know it exists.</p>
  </div>



  <form id="myForm">

      <div class=" row addImageDiv">
        <label for="image">
          <div class="button raised"> this is a button
            <div class="center" fit>
              <paper-ripple fit></paper-ripple>
            </div>
          </div>
        </label>
      <input id="image" type="file" accept="image/*" class="hidden" onchange="upload(this.files[0])">
    </div>

  </form>
  <div class="card" z-default=30 z-hover=70>

  </div>


</div>
